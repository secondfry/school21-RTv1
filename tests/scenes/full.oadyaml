      x: 2
      y: -10
      z: 4
    normal:
      x: 0
      y: 1
      z: 0
    color:
      red: 255
      green: 255
      blue: 0
    specular: 1

cylinder:
  - position:
      x: 1
      y: 0
      z: 10
    direction:
      x: 2
      y: 10
      z: 10
    color:
      red: 255
      green: 255
      blue: 255
    radius: 1
