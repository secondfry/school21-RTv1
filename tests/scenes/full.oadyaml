light:
  point:
    - position:
        x: 2
        y: 1
        z: 0
      intensity: 60
  directional:
    - direction:
        x: -1
        y: 4
        z: -4
      intensity: 20
  ambient: 20

sphere:
  - position:
      x: 0
      y: -1
      z: 3
